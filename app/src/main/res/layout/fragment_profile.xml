<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/main_background_port"
              android:orientation="vertical"
              android:paddingTop="@dimen/app_padding_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar_image"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/your_photo"
            android:scaleType="centerCrop"
            android:src="@drawable/empty_avatar"/>

        <TextView
            android:id="@+id/player_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_padding"
            android:layout_marginEnd="@dimen/app_padding"
            android:layout_marginLeft="@dimen/app_padding"
            android:layout_marginRight="@dimen/app_padding"
            android:layout_marginStart="@dimen/app_padding"
            android:layout_marginTop="@dimen/app_padding_large"
            android:background="?attr/selectableItemBackground"
            android:textSize="@dimen/medium_title_text_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/upload_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/app_padding"
                android:background="?attr/selectableItemBackground"
                android:text="@string/upload_photo"
                android:textAllCaps="false"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/delete_avatar"
                android:layout_width="@dimen/app_padding"
                android:layout_height="@dimen/app_padding"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/app_padding"
                android:layout_toEndOf="@+id/upload_photo"
                android:layout_toRightOf="@+id/upload_photo"
                android:adjustViewBounds="true"
                android:contentDescription="@string/delete_photo"
                android:scaleType="centerInside"
                android:src="@drawable/delete_avatar"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/info_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

            <Button
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackground"
                android:text="@string/logout"
                android:textAllCaps="false"
                android:visibility="gone"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>